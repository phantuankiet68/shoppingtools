model Customer {
  id        String   @id @default(cuid())

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  name      String
  phone     String?
  email     String?


  address1  String?
  address2  String?
  city      String?
  state     String?
  postal    String?
  country   String?

  notes     String?   @db.Text
  tags      String?
  isActive  Boolean   @default(true)

  orders    Order[]
  addresses Address[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, phone])
  @@unique([userId, email])

  @@index([userId])
  @@index([userId, name])
  @@index([userId, phone])
  @@index([userId, email])
  @@index([isActive])
}
