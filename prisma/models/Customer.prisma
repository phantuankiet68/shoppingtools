model Customer {
  id        String   @id @default(cuid())

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // identity
  name      String
  phone     String?
  email     String?

  // optional: default address (for quick-fill)
  address1  String?
  address2  String?
  city      String?
  state     String?
  postal    String?
  country   String?

  // admin helpers
  notes     String?   @db.Text
  tags      String?   // e.g. "vip,repeat,high_risk"
  isActive  Boolean   @default(true)

  orders    Order[]
  addresses Address[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Uniques: thường unique theo user + phone/email để tránh trùng trong 1 shop
  @@unique([userId, phone])
  @@unique([userId, email])

  @@index([userId])
  @@index([userId, name])
  @@index([userId, phone])
  @@index([userId, email])
  @@index([isActive])
}
